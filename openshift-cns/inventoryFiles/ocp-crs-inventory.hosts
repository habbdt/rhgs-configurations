ose-cns-node02.example.com glusterfs_ip=192.168.122.61 glusterfs_devices='[ "/dev/vdc" ]' glusterfs_zone=2
ose-cns-node03.example.com glusterfs_ip=192.168.122.62 glusterfs_devices='[ "/dev/vdc" ]' glusterfs_zone=3


