ose-master01.example.com openshift_node_labels="{'region': 'primary', 'zone': 'default', 'role': 'master'}"
ose-infra-node[01:03].example.com openshift_node_labels="{'region': 'infra', 'zone': 'default', 'role': 'infra'}"
